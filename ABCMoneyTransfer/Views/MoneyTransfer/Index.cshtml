@{
    ViewData["Title"] = "ABC Money Transfer";
}

<style>
    .dashboard-card {
        border: none;
        border-radius: 1.5rem;
        transition: all 0.3s ease;
        overflow: hidden;
        background: linear-gradient(145deg, #ffffff, #f8f9fa);
        box-shadow: 0 4px 25px rgba(0, 0, 0, 0.05);
        min-height: 400px;
    }

        .dashboard-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 35px rgba(0, 0, 0, 0.15);
        }

    .card-header {
        background: linear-gradient(135deg, var(--bg-dark), var(--bg-primary));
        border-radius: 1.5rem 1.5rem 0 0 !important;
        padding: 2.5rem 0;
        transition: all 0.3s ease;
    }

    .dashboard-card:hover .card-header {
        background: linear-gradient(135deg, var(--bg-primary), var(--bg-dark));
    }

    .card-icon {
        font-size: 5rem;
        color: white;
        transition: all 0.3s ease;
        filter: drop-shadow(0 4px 6px rgba(0, 0, 0, 0.1));
    }

    .dashboard-card:hover .card-icon {
        transform: scale(1.1);
        filter: drop-shadow(0 6px 8px rgba(0, 0, 0, 0.2));
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--bg-dark);
        letter-spacing: -0.5px;
        position: relative;
        padding-bottom: 0.5rem;
    }

        .card-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 40px;
            height: 3px;
            background: var(--bg-primary);
            transition: all 0.3s ease;
        }

    .dashboard-card:hover .card-title::after {
        width: 80px;
        background: var(--bg-light);
    }

    @@media (max-width: 768px) {
        .container {
            height: auto !important;
            padding: 2rem 0;
        }

        .dashboard-card {
            margin-bottom: 2rem;
            min-height: auto;
        }
    }
</style>

<div class="container">
    <div class="row justify-content-center g-4">
        <div class="col-12 text-center mb-5">
            <h1 class="display-4 fw-bold text-gradient-primary">Welcome to ABC Money Transfer</h1>
            <p class="lead text-muted">Secure and Fast International Money Transfers</p>
        </div>

        <div class="col-md-6 col-lg-4">
            <a href="/MoneyTransfer/MoneyTransfer" class="text-decoration-none">
                <div class="dashboard-card">
                    <div class="card-header d-flex align-items-center justify-content-center">
                        <i class="fas fa-paper-plane card-icon"></i>
                    </div>
                    <div class="card-body text-center py-4">
                        <h3 class="card-title">Money Transfer</h3>
                        <p class="text-muted mt-3">Send money to Nepal instantly with competitive exchange rates</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a href="/ExchangeRate/ViewExchangeRates" class="text-decoration-none">
                <div class="dashboard-card">
                    <div class="card-header d-flex align-items-center justify-content-center">
                        <i class="fas fa-chart-line card-icon"></i>
                    </div>
                    <div class="card-body text-center py-4">
                        <h3 class="card-title">Exchange Rates</h3>
                        <p class="text-muted mt-3">Check real-time currency exchange rates</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a href="/ExchangeRate/Index" class="text-decoration-none">
                <div class="dashboard-card">
                    <div class="card-header d-flex align-items-center justify-content-center">
                        <i class="fas fa-file-invoice-dollar card-icon"></i>
                    </div>
                    <div class="card-body text-center py-4">
                        <h3 class="card-title">Reports</h3>
                        <p class="text-muted mt-3">View transaction history and generate reports</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>